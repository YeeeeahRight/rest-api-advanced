<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC "-//Hibernate/Hibernate Configuration DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
    <session-factory>
        <property name="hibernate.dialect">org.hibernate.dialect.H2Dialect</property>
        <property name="hibernate.connection.driver_class">org.h2.Driver</property>
        <property name="hibernate.connection.url">jdbc:h2:~/test;DB_CLOSE_ON_EXIT=TRUE</property>
        <property name="hibernate.connection.username">sa</property>
        <property name="hibernate.connection.password"></property>
        <property name="show_sql">true</property>
        <property name="hbm2ddl.auto">none</property>

        <mapping class="com.epam.esm.model.Certificate"/>
        <mapping class="com.epam.esm.model.Tag"/>
        <mapping class="com.epam.esm.model.User"/>
        <mapping class="com.epam.esm.model.Purchase"/>

    </session-factory>
</hibernate-configuration>
